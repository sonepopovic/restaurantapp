@model IEnumerable<RestaurantFacultyApplication.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Managers connected to Restaurants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RES_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.ROLE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ACTIVATED)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RES_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ROLE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ACTIVATED)
        </td>
        <td>
            @Html.ActionLink("Change Restaurant", "ManagerToRest", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
